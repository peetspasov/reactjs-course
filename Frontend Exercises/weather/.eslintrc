{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "flowtype",
    "mocha"
  ],
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "window": false,
    "sinon": false,
    "__DEV__": false,
    "__PROD__": false,
    "__TEST__": false,
    "__CLIENT__": false,
    "__SERVER__": false,
    "__DEBUG__": false,
    "__DEBUG_NEW_WINDOW__": false,
    "__BASENAME__": false,
    "__PATTERNLAB__": false,
    "__MOCK__": false
  },
  "rules": {
    "arrow-body-style": [
      2,
      "as-needed"
    ],
    "class-methods-use-this": 0,
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "camelcase": [
      1,
      {
        "allow": [
          "^UNSAFE_"
        ]
      }
    ],
    "import/no-extraneous-dependencies": 0,
    "import/no-named-as-default": 0,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "import/extensions": 0,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "depth": 3
      }
    ],
    "max-len": [
      2,
      120,
      2
    ],
    "max-classes-per-file": 1,
    "newline-per-chained-call": 0,
    "no-unused-vars": 2,
    "no-underscore-dangle": 0,
    "no-useless-escape": 0,
    "no-confusing-arrow": 0,
    "no-console": 2,
    "no-lonely-if": 1,
    "no-plusplus": 0,
    "no-use-before-define": 0,
    "operator-linebreak": 0,
    "prefer-template": 2,
    "prefer-object-spread": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-closing-tag-location": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-no-target-blank": 1,
    "react/jsx-uses-vars": 2,
    "react/require-default-props": 0,
    "react/require-extension": 0,
    "react/self-closing-comp": 0,
    "react/sort-comp": 0,
    "react/default-props-match-prop-types": 0,
    "react/no-unused-prop-types": 1,
    "react/static-property-placement": 1,
    "react/state-in-constructor": 1,
    "react/jsx-fragments": 1,
    "react/jsx-curly-newline": 1,
    "react/jsx-props-no-spreading": 1,
    "react-hooks/rules-of-hooks": 2,
    "wrap-iife": [
      2,
      "any"
    ],
    // Refactor in own PR
    "react/prefer-stateless-function": 1,
    // warn (until all refactored)
    "no-extra-boolean-cast": 1,
    "no-else-return": 1,
    "no-return-assign": 1,
    "no-restricted-globals": 1,
    "no-restricted-syntax": 1,
    "no-restricted-properties": 1,
    "no-mixed-operators": 1,
    "no-prototype-builtins": 1,
    "react/no-access-state-in-setstate": 1,
    "react/no-array-index-key": 1,
    "jsx-a11y/anchor-is-valid": 1,
    // spacing/quotes rules, auto fixable (own PR)
    "indent": 0,
    "react/jsx-indent": 0,
    "react/jsx-curly-spacing": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-tag-spacing": 0,
    "space-infix-ops": 0,
    "no-multi-spaces": 0,
    "block-spacing": 0,
    "quotes": 0,
    "react/jsx-curly-brace-presence": 0,
    // mute/warn till now, auto fixable (own PR)
    "import/order": 0,
    "import/first": 0,
    "padded-blocks": 0,
    "import/newline-after-import": 0,
    "no-multiple-empty-lines": 0,
    "lines-between-class-members": 0,
    "arrow-parens": 0,
    "function-paren-newline": 0,
    "implicit-arrow-linebreak": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-first-prop-new-line": 0,
    "react/jsx-max-props-per-line": 0,
    // mute (needs more refactoring)
    "import/no-named-as-default-member": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/mouse-events-have-key-events": 0,
    "object-curly-newline": 0,
    "object-property-newline": 0,
    "prefer-destructuring": 0,
    "react/jsx-wrap-multilines": 0,
    "prefer-promise-reject-errors": 0,
    "global-require": 0,
    // lodash optimizations
    // Reduce lodash check levels from error to warning (by now), to allow a gradual refactor
    "you-dont-need-lodash-underscore/is-undefined": "warn",
    "you-dont-need-lodash-underscore/for-each": "warn",
    "you-dont-need-lodash-underscore/concat": "warn",
    "you-dont-need-lodash-underscore/is-null": "warn",
    "you-dont-need-lodash-underscore/split": "warn",
    "you-dont-need-lodash-underscore/omit": "warn",
    "you-dont-need-lodash-underscore/replace": "warn",
    "you-dont-need-lodash-underscore/trim": "warn",
    "you-dont-need-lodash-underscore/index-of": "warn",
    "you-dont-need-lodash-underscore/is-array": "warn",
    "you-dont-need-lodash-underscore/slice": "warn",
    "you-dont-need-lodash-underscore/last": "warn",
    "you-dont-need-lodash-underscore/starts-with": "warn",
    "you-dont-need-lodash-underscore/assign": "warn",
    "you-dont-need-lodash-underscore/flatten": "warn",
    "you-dont-need-lodash-underscore/drop-right": "warn",
    "you-dont-need-lodash-underscore/drop": "warn",
    "you-dont-need-lodash-underscore/last-index-of": "warn",
    "you-dont-need-lodash-underscore/join": "warn",
    "you-dont-need-lodash-underscore/uniq": "warn"
  }
}